    "@types/chai": "^4.3.17",
    "@types/jsdom": "^21.1.7",
    "@types/mocha": "^10.0.7",
    "@types/node": "^22.4.1",
    "@web/dev-server": "^0.4.6",
    "@web/dev-server-core": "^0.7.2",
    "@web/dev-server-esbuild": "^1.0.2",
    "@web/test-runner": "^0.18.3",
    "@web/test-runner-mocha": "^0.9.0",
    "@web/test-runner-playwright": "^0.11.0",
