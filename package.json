{
  "name": "my-web-template",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "build": "esbuild src/index.ts --bundle --outfile=dist/bundle.js --minify --sourcemap",
    "start": "esbuild src/index.ts --bundle --outfile=dist/bundle.js --minify --sourcemap --servedir=dist --watch",
    "test": "web-test-runner --config web-test-runner.config.mjs --coverage --node-resolve --watch",
    "web": "npm run build && npm run test",
    "build-plugin-in": "esbuild src/index.ts --bundle --outfile=dist/bundle.js --minify --format=esm",
    "dserver": "web-dev-server --config ./dist/web-dev-server-custom-esbuild.config.js"
  },
